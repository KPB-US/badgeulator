<h1>Listing Properties</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Artifact</th>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.artifact.description %></td>
        <td><%= property.name %></td>
        <td><%= property.value %></td>
        <td><%= link_to 'Show', property, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_property_path(property), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Property', new_property_path, class: 'btn btn-default' %>
<%= link_to 'Artifacts', artifacts_path, class: 'btn btn-default' %>
