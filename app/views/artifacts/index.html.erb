<h1>Artifacts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Side</th>
      <th>Name</th>
      <th>Order</th>
      <th>Description</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artifacts.each do |artifact| %>
      <tr>
        <td><%= artifact.side %></td>
        <td><%= artifact.name %></td>
        <td><%= artifact.order %></td>
        <td><%= artifact.description %></td>
        <td><%= artifact.value %></td>
        <td><%= link_to 'Show', artifact %></td>
        <td><%= link_to 'Edit', edit_artifact_path(artifact) %></td>
        <td><%= link_to 'Destroy', artifact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artifact', new_artifact_path, class: "btn btn-default" %>
