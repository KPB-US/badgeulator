<p id="notice"><%= notice %></p>

<h1>Badge</h1>

<div class="row">
  <div class="col-xs-6 col-sm-4">
    <%= simple_form_for @badge do |f| %>
      <%= f.input :name, input_html: { readonly: :readonly } %>
      <%= f.input :department, input_html: { readonly: :readonly } %>
      <%= f.input :title, input_html: { readonly: :readonly } %>
      <%= f.input :employee_id, label: 'Employee ID', input_html: { readonly: :readonly } %>
    <% end %>
  </div>
  <div class="col-xs-6 col-sm-4">
<!--
    <div id="snapshot">
      <img src="<%= image_badge_url(@badge) %>" />
    </div>
-->    
    <div id="preview">
      <img src="<%= preview_badge_url(@badge) %>" />
    </div>
  </div>
</div>
<%= link_to "Print", print_badge_url(@badge, remote: true), class: 'btn btn-primary' %>

<%= link_to 'Back', badges_path, class: 'btn btn-default' %>
