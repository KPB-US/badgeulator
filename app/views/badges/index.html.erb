<p id="notice"><%= notice %></p>

<h1>Listing Badges</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Name</th>
      <th>Title</th>
      <th>Department</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @badges.each do |badge| %>
      <tr>
        <td><%= badge.employee_id %></td>
        <td><%= badge.name %></td>
        <td><%= badge.title %></td>
        <td><%= badge.department %></td>
        <td><%= link_to 'Show', badge %>
        <%= link_to 'Edit', edit_badge_path(badge) %>
        <%= link_to 'Destroy', badge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Badge', new_badge_path, class: 'btn btn-primary' %>
